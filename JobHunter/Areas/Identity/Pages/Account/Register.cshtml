@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_NewLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card border-0 shadow overflow-hidden">
                    <div class="row g-0">

                        <!-- Left Side - Benefits Section -->
                        <div class="col-md-5 bg-primary text-white d-flex align-items-center">
                            <div class="p-4 text-center w-100">
                                <div class="mb-3">
                                    <i class="bi bi-rocket-takeoff-fill fs-1"></i>
                                </div>
                                <h4 class="fw-bold mb-2">Start Your Journey</h4>
                                <p class="mb-3 small">Join thousands of professionals advancing their careers</p>
                                <div class="text-start small">
                                    <div class="mb-2 d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        <span>Free AI-powered resume builder</span>
                                    </div>
                                    <div class="mb-2 d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        <span>Professional templates library</span>
                                    </div>
                                    <div class="mb-2 d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        <span>Real-time job market insights</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        <span>Personalized career guidance</span>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <div class="bg-white bg-opacity-25 rounded p-3">
                                        <i class="bi bi-shield-check fs-4 mb-2 d-block"></i>
                                        <small class="fw-semibold">100% Secure & Private</small>
                                        <br>
                                        <small class="opacity-75">Your data is encrypted and never shared</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side - Registration Form -->
                        <div class="col-md-7 d-flex align-items-center">
                            <div class="p-4 w-100">
                                <div class="text-center mb-3">
                                    <h3 class="fw-bold text-dark">Create Account</h3>
                                    <p class="text-muted small">Get started with your free CareerBoost account</p>
                                </div>

                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                    <!-- Name Row -->
                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text bg-light border-end-0">
                                                    <i class="bi bi-person text-muted"></i>
                                                </span>
                                                <input asp-for="Input.FirstName"
                                                       class="form-control border-start-0 ps-0"
                                                       placeholder="First name"
                                                       autocomplete="given-name"
                                                       aria-required="true" />
                                            </div>
                                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                        </div>
                                        <div class="col-6">
                                            <input asp-for="Input.LastName"
                                                   class="form-control form-control-sm"
                                                   placeholder="Last name"
                                                   autocomplete="family-name"
                                                   aria-required="true" />
                                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Email Input -->
                                    <div class="mb-3">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-envelope text-muted"></i>
                                            </span>
                                            <input asp-for="Input.Email"
                                                   class="form-control border-start-0 ps-0"
                                                   placeholder="Email address"
                                                   autocomplete="email"
                                                   aria-required="true" />
                                        </div>
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="mb-3">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-lock text-muted"></i>
                                            </span>
                                            <input asp-for="Input.Password"
                                                   class="form-control border-start-0 ps-0"
                                                   placeholder="Create password"
                                                   autocomplete="new-password"
                                                   aria-required="true" />
                                        </div>
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>

                                    <!-- Confirm Password Input -->
                                    <div class="mb-3">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-lock-fill text-muted"></i>
                                            </span>
                                            <input asp-for="Input.ConfirmPassword"
                                                   class="form-control border-start-0 ps-0"
                                                   placeholder="Confirm password"
                                                   autocomplete="new-password"
                                                   aria-required="true" />
                                        </div>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>

                                    <!-- Terms Checkbox -->
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="terms" required>
                                        <label class="form-check-label small text-muted" for="terms">
                                            I agree to the <a href="#" class="text-decoration-none">Terms of Service</a>
                                            and <a href="#" class="text-decoration-none">Privacy Policy</a>
                                        </label>
                                    </div>

                                    <!-- Create Account Button -->
                                    <div class="d-grid">
                                        <button id="registerSubmit" type="submit" class="btn btn-primary">
                                            Create Free Account
                                        </button>
                                    </div>
                                </form>

                                <!-- Divider -->
                                <div class="text-center my-3">
                                    <small class="text-muted">OR</small>
                                </div>

                                <!-- Sign In Link -->
                                <div class="text-center">
                                    <p class="text-muted small mb-2">Already have an account?</p>
                                    <a asp-page="./Login"
                                       asp-route-returnUrl="@Model.ReturnUrl"
                                       class="btn btn-outline-primary btn-sm">
                                        Sign In
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}