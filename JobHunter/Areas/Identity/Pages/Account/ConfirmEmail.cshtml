@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
    Layout = "_NewLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-50">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="card border-0 shadow">
                    
                    <!-- Header -->
                    <div class="card-header bg-primary text-white text-center py-4 border-0">
                        <div class="mb-3">
                            @if (Model.StatusMessage != null && Model.StatusMessage.Contains("Thank you"))
                            {
                                <i class="bi bi-check-circle-fill display-4"></i>
                            }
                            else
                            {
                                <i class="bi bi-envelope-check-fill display-4"></i>
                            }
                        </div>
                        <h3 class="fw-bold mb-0">Email Confirmation</h3>
                    </div>
                    
                    <!-- Body -->
                    <div class="card-body p-5 text-center">
                        <!-- Status Message -->
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                        
                        @if (Model.StatusMessage != null && Model.StatusMessage.Contains("Thank you"))
                        {
                            <!-- Success State -->
                            <div class="mb-4">
                                <h5 class="fw-semibold text-success mb-3">
                                    <i class="bi bi-check-circle me-2"></i>Email Confirmed!
                                </h5>
                                <p class="text-muted">
                                    Your email has been successfully confirmed. You can now access all features of your CareerBoost account.
                                </p>
                            </div>
                            
                            <!-- Next Steps -->
                            <div class="bg-light rounded p-4 mb-4">
                                <h6 class="fw-semibold mb-3">What's Next?</h6>
                                <div class="text-start text-muted small">
                                    <div class="mb-2">
                                        <i class="bi bi-1-circle-fill text-primary me-2"></i>
                                        Complete your profile information
                                    </div>
                                    <div class="mb-2">
                                        <i class="bi bi-2-circle-fill text-primary me-2"></i>
                                        Build your first AI-powered resume
                                    </div>
                                    <div>
                                        <i class="bi bi-3-circle-fill text-primary me-2"></i>
                                        Start applying to your dream jobs
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                <a asp-page="/Account/Login" class="btn btn-primary">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In to Get Started
                                </a>
                                <a asp-page="/Index" class="btn btn-outline-secondary btn-sm">
                                    Return to Home
                                </a>
                            </div>
                        }
                        else
                        {
                            <!-- Error or Pending State -->
                            <div class="mb-4">
                                <div class="bg-warning bg-opacity-10 rounded p-3 mb-3">
                                    <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                                    <span class="fw-medium">Email confirmation is required</span>
                                </div>
                                <p class="text-muted small">
                                    Please check your email and click the confirmation link to activate your account.
                                </p>
                            </div>
                            
                            <!-- Help Section -->
                            <div class="text-start bg-light rounded p-3 mb-4">
                                <p class="fw-semibold small mb-2">Didn't receive the email?</p>
                                <ul class="text-muted small mb-0">
                                    <li>Check your spam or junk folder</li>
                                    <li>Make sure you entered the correct email</li>
                                    <li>Wait a few minutes and check again</li>
                                </ul>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                <a asp-page="/Account/ResendEmailConfirmation" class="btn btn-primary">
                                    <i class="bi bi-arrow-repeat me-2"></i>Resend Confirmation Email
                                </a>
                                <a asp-page="/Account/Login" class="btn btn-outline-secondary btn-sm">
                                    Back to Sign In
                                </a>
                            </div>
                        }
                    </div>
                    
                    <!-- Footer -->
                    <div class="card-footer bg-light border-0 text-center py-3">
                        <small class="text-muted">
                            <i class="bi bi-question-circle me-1"></i>
                            Need help? <a href="#" class="text-decoration-none">Contact Support</a>
                        </small>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>