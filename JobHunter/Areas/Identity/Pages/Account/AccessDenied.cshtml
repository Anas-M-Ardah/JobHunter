@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "_NewLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-50">
            <div class="col-lg-6 col-md-8">
                <div class="text-center">
                    <!-- Icon -->
                    <div class="mb-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex p-4">
                            <i class="bi bi-shield-lock-fill text-danger display-3"></i>
                        </div>
                    </div>

                    <!-- Error Message -->
                    <h1 class="display-6 fw-bold text-danger mb-3">Access Denied</h1>
                    <p class="lead text-muted mb-4">
                        Sorry, you don't have permission to access this resource.
                    </p>

                    <!-- Additional Info -->
                    <div class="card border-0 bg-light mb-4">
                        <div class="card-body p-4">
                            <h5 class="fw-semibold mb-3">Why am I seeing this?</h5>
                            <ul class="text-start text-muted small mb-0">
                                <li class="mb-2">You may not have the required permissions for this page</li>
                                <li class="mb-2">Your session may have expired</li>
                                <li class="mb-2">You might need to upgrade your account</li>
                                <li>The resource may have been moved or deleted</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-page="/Index" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Go to Home
                        </a>
                        <a asp-page="/Account/Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Again
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>

                    <!-- Support Link -->
                    <div class="mt-4">
                        <p class="text-muted small mb-0">
                            Still having issues?
                            <a href="#" class="text-decoration-none">Contact Support</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>