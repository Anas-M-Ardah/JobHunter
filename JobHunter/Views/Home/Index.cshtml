                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features and Quick Actions Row -->
<div class="row">
    <!-- AI Features Card -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-brain"></i> AI-Powered Features
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success mr-2"></i>
                            <strong>Smart Content Suggestions</strong>
                            <p class="mb-0 small text-muted">Get AI-powered writing assistance for descriptions</p>
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success mr-2"></i>
                            <strong>Professional Templates</strong>
                            <p class="mb-0 small text-muted">Choose from expertly designed layouts</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success mr-2"></i>
                            <strong>Instant Formatting</strong>
                            <p class="mb-0 small text-muted">Automatic layout optimization and styling</p>
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success mr-2"></i>
                            <strong>Multiple Exports</strong>
                            <p class="mb-0 small text-muted">Download as PDF, Word, or view online</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">
                    <i class="fas fa-rocket"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <a asp-controller="Resume" asp-action="Create" class="btn btn-outline-primary btn-block">
                        <i class="fas fa-plus-circle mr-2"></i>
                        New Resume
                    </a>
                </div>
                <div class="mb-3">
                    <a asp-controller="Portfolio" asp-action="Create" class="btn btn-outline-success btn-block">
                        <i class="fas fa-briefcase mr-2"></i>
                        New Portfolio
                    </a>
                </div>
                <div class="mb-3">
                    <a asp-controller="Resume" asp-action="Index" class="btn btn-outline-info btn-block">
                        <i class="fas fa-list mr-2"></i>
                        My Documents
                    </a>
                </div>
            </div>
        </div>

        <!-- Pro Tips Card -->
        <div class="card shadow mt-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-lightbulb"></i> Pro Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-light" role="alert">
                    <i class="fas fa-star text-warning mr-2"></i>
                    <strong>Tip:</strong> Use action verbs like "developed," "managed," and "implemented" to make your resume more impactful.
                </div>
                <h6 class="font-weight-bold text-gray-800 mb-3">Features:</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <span class="badge badge-success mr-2">NEW</span>
                        AI writing assistance
                    </li>
                    <li class="mb-2">
                        <span class="badge badge-info mr-2">UPDATED</span>
                        Enhanced templates
                    </li>
                    <li class="mb-2">
                        <span class="badge badge-warning mr-2">SOON</span>
                        More export options
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add some interactive elements
        $(document).ready(function() {
            // Animate counters
            $('.h5').each(function() {
                var $this = $(this);
                var countTo = parseInt($this.text().replace(/,/g, ''));

                if (!isNaN(countTo)) {
                    $({ countNum: 0 }).animate({
                        countNum: countTo
                    }, {
                        duration: 2000,
                        easing: 'swing',
                        step: function() {
                            $this.text(Math.floor(this.countNum).toLocaleString());
                        },
                        complete: function() {
                            $this.text(countTo.toLocaleString());
                        }
                    });
                }
            });
        });
    </script>

    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-marker {
            position: absolute;
            left: -35px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .timeline-item:before {
            content: '';
            position: absolute;
            left: -31px;
            top: 20px;
            height: calc(100% + 10px);
            width: 4px;
            background: #e3e6f0;
        }

        .timeline-item:last-child:before {
            display: none;
        }

        .timeline-title {
            font-size: 14px;
            font-weight: 600;
            color: #5a5c69;
            margin-bottom: 5px;
        }

        .timeline-text {
            font-size: 13px;
            color: #858796;
            margin-bottom: 5px;
        }

        .timeline-date {
            font-size: 12px;
            color: #858796;
        }
    </style>
}