@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Home - AI Resume & Portfolio Builder";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Welcome to Career AI</h1>
    <div>
        <a asp-controller="Resume" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Create Resume
        </a>
        <a asp-controller="Portfolio" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm ml-2">
            <i class="fas fa-briefcase fa-sm text-white-50"></i> Create Portfolio
        </a>
    </div>
</div>

<!-- Hero Section -->
<div class="card shadow mb-4 border-left-primary">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="h4 font-weight-bold text-primary mb-3">
                    <i class="fas fa-robot text-primary"></i> Build Your Career with AI Power
                </h2>
                <p class="lead text-gray-700 mb-4">
                    Create professional resumes and stunning portfolios in minutes with our AI-powered tools.
                    Get smart formatting, content suggestions, and professional templates.
                </p>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Resume" asp-action="Create" class="btn btn-primary btn-lg btn-block">
                            <i class="fas fa-file-alt mr-2"></i> Start Building Resume
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Portfolio" asp-action="Create" class="btn btn-success btn-lg btn-block">
                            <i class="fas fa-briefcase mr-2"></i> Create Portfolio
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="text-center">
                    <i class="fas fa-magic fa-5x text-primary mb-3"></i>
                    <h5 class="text-gray-800">AI-Powered Creation</h5>
                    <p class="text-muted">Smart templates and formatting</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Row -->
<div class="row">
    <!-- Option 3: Focus on AI assistance -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            AI Assistance
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Active</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-brain fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Export Formats
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">PDF, Word</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-download fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Industries Supported
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">All</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-briefcase fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
