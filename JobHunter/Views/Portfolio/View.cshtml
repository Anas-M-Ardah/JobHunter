@model JobHunter.Models.Portfolio

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@Model.FirstName @Model.LastName - Portfolio</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">

	<link rel="stylesheet" href="~/assetsPort/css/open-iconic-bootstrap.min.css">
	<link rel="stylesheet" href="~/assetsPort/css/animate.css">
	<link rel="stylesheet" href="~/assetsPort/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/assetsPort/css/owl.theme.default.min.css">
	<link rel="stylesheet" href="~/assetsPort/css/magnific-popup.css">
	<link rel="stylesheet" href="~/assetsPort/css/aos.css">
	<link rel="stylesheet" href="~/assetsPort/css/ionicons.min.css">
	<link rel="stylesheet" href="~/assetsPort/css/flaticon.css">
	<link rel="stylesheet" href="~/assetsPort/css/icomoon.css">
	<link rel="stylesheet" href="~/assetsPort/css/style.css">

	<style>
		/* CSS Variables for consistent theming */
		:root {
			--primary-color: #007bff;
			--primary-dark: #0056b3;
			--secondary-color: #6c757d;
			--text-dark: #333;
			--text-light: #666;
			--text-muted: #999;
			--text-white: #ffffff;
			--bg-light: #f8f9fa;
			--bg-white: #ffffff;
			--bg-dark: #000000;
			--border-radius: 10px;
			--border-radius-sm: 6px;
			--border-radius-lg: 15px;
			--shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
			--shadow-md: 0 5px 15px rgba(0,0,0,0.1);
			--shadow-lg: 0 10px 25px rgba(0,0,0,0.15);
			--transition: all 0.3s ease;
			--spacing-xs: 10px;
			--spacing-sm: 15px;
			--spacing-md: 20px;
			--spacing-lg: 30px;
			--spacing-xl: 40px;
		}

		/* Dark background text color fix */
		.hero,
		.hero .slider-item {
			color: var(--text-white);
		}

		.hero h1,
		.hero h2,
		.hero .subheading {
			color: var(--text-white);
		}

		/* Button styling */
		.btn-custom {
			padding: 12px 30px;
			border-radius: 25px;
			font-weight: 500;
			text-decoration: none;
			display: inline-block;
			transition: var(--transition);
			border: none;
			cursor: pointer;
		}

		.btn-primary-custom {
			background: var(--primary-color);
			color: var(--text-white);
		}

			.btn-primary-custom:hover {
				background: var(--primary-dark);
				transform: translateY(-2px);
				box-shadow: var(--shadow-md);
				color: var(--text-white);
				text-decoration: none;
			}

		.btn-outline-custom {
			background: transparent;
			color: var(--text-white);
			border: 2px solid var(--text-white);
		}

			.btn-outline-custom:hover {
				background: var(--text-white);
				color: var(--primary-color);
				text-decoration: none;
			}

		/* Card styling */
		.card-custom {
			background: var(--bg-white);
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-sm);
			transition: var(--transition);
			padding: var(--spacing-lg);
			height: 100%;
		}

			.card-custom:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow-lg);
			}

		/* Section spacing */
		.section-spacing {
			padding: 80px 0;
		}

		.section-spacing-sm {
			padding: 60px 0;
		}

		/* Section headings */
		.section-heading {
			margin-bottom: var(--spacing-xl);
		}

			.section-heading h1.big {
				font-size: 120px;
				color: rgba(0,0,0,0.05);
				font-weight: 800;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				z-index: -1;
			}

			.section-heading h2 {
				color: var(--text-dark);
				font-weight: 600;
				margin-bottom: var(--spacing-sm);
			}

			.section-heading p {
				color: var(--text-light);
				font-size: 16px;
				line-height: 1.6;
			}

		/* Service cards */
		.service-card {
			text-align: center;
			padding: var(--spacing-xl);
			background: var(--bg-white);
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-sm);
			transition: var(--transition);
			height: 100%;
			text-decoration: none;
			color: inherit;
		}

			.service-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow-lg);
				text-decoration: none;
				color: inherit;
			}

			.service-card .icon {
				width: 80px;
				height: 80px;
				background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				margin: 0 auto var(--spacing-md);
			}

				.service-card .icon i {
					font-size: 32px;
					color: var(--text-white);
				}

			.service-card h3 {
				color: var(--text-dark);
				font-weight: 600;
				margin-bottom: var(--spacing-sm);
			}

			.service-card p {
				color: var(--text-light);
				line-height: 1.6;
			}

		/* Project cards - Improved width and layout */
		.project-card {
			background: var(--bg-white);
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-sm);
			transition: var(--transition);
			padding: var(--spacing-lg);
			height: 100%;
			display: flex;
			flex-direction: column;
			width: 100%;
			min-height: 300px;
		}

			.project-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow-lg);
			}

			.project-card h3 {
				color: var(--text-dark);
				margin-bottom: var(--spacing-sm);
				font-weight: 600;
				font-size: 1.25rem;
			}

				.project-card h3 a {
					color: var(--text-dark);
					text-decoration: none;
					transition: var(--transition);
				}

					.project-card h3 a:hover {
						color: var(--primary-color);
						text-decoration: none;
					}

			.project-card .service-tag {
				background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
				color: var(--text-white);
				padding: var(--spacing-xs) 16px;
				border-radius: 20px;
				font-size: 12px;
				display: inline-block;
				margin-bottom: var(--spacing-sm);
			}

			.project-card p {
				color: var(--text-light);
				line-height: 1.6;
				margin-bottom: var(--spacing-md);
				flex-grow: 1;
			}

			.project-card .btn-project {
				background: var(--primary-color);
				color: var(--text-white);
				padding: var(--spacing-xs) 25px;
				border-radius: 25px;
				text-decoration: none;
				display: inline-block;
				transition: var(--transition);
				align-self: flex-start;
			}

				.project-card .btn-project:hover {
					background: var(--primary-dark);
					transform: translateY(-2px);
					color: var(--text-white);
					text-decoration: none;
				}

		/* About info styling */
		.about-info {
			list-style: none;
			padding: 0;
		}

			.about-info li {
				display: flex;
				margin-bottom: var(--spacing-xs);
				padding: var(--spacing-xs) 0;
				border-bottom: 1px solid #eee;
			}

				.about-info li:last-child {
					border-bottom: none;
				}

				.about-info li span:first-child {
					font-weight: 600;
					color: var(--text-dark);
					min-width: 120px;
				}

				.about-info li span:last-child {
					color: var(--text-light);
				}

		/* Navbar text color fix */
		.navbar-dark .navbar-nav .nav-link {
			color: rgba(255, 255, 255, 0.8);
		}

			.navbar-dark .navbar-nav .nav-link:hover {
				color: var(--text-white);
			}

		.navbar-dark .navbar-brand {
			color: var(--text-white);
		}

		/* Footer styling */
		.ftco-footer {
			background: var(--text-dark);
			color: var(--text-white);
		}

			.ftco-footer h2 {
				color: var(--text-white);
			}

			.ftco-footer p {
				color: rgba(255, 255, 255, 0.7);
			}

			.ftco-footer a {
				color: rgba(255, 255, 255, 0.7);
				transition: var(--transition);
			}

				.ftco-footer a:hover {
					color: var(--text-white);
					text-decoration: none;
				}

		/* Responsive adjustments */
		@@media (max-width: 768px) {
			.section-heading h1.big {
				font-size: 80px;
			}

			.card-custom,
			.service-card,
			.project-card {
				margin-bottom: var(--spacing-md);
			}

			.project-card {
				min-height: 250px;
			}
		}

		/* Project grid improvements */
		.project-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			gap: var(--spacing-lg);
		}

		@@media (max-width: 768px) {
			.project-grid {
				grid-template-columns: 1fr;
				gap: var(--spacing-md);
			}
		}
	</style>
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

	<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar ftco-navbar-light site-navbar-target" id="ftco-navbar">
		<div class="container">
			<a class="navbar-brand" href="#home-section">@Model.FirstName @Model.LastName</a>
			<button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="oi oi-menu"></span> Menu
			</button>

			<div class="collapse navbar-collapse" id="ftco-nav">
				<ul class="navbar-nav nav ml-auto">
					<li class="nav-item"><a href="#home-section" class="nav-link"><span>Home</span></a></li>
					<li class="nav-item"><a href="#about-section" class="nav-link"><span>About</span></a></li>
					@if (Model.Services != null && Model.Services.Any())
					{
						<li class="nav-item"><a href="#services-section" class="nav-link"><span>Services</span></a></li>
					}
					@if (Model.Projects != null && Model.Projects.Any())
					{
						<li class="nav-item"><a href="#projects-section" class="nav-link"><span>Projects</span></a></li>
